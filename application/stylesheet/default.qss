QTabWidget::pane { /* The tab widget frame */
  border-style: solid;
  border: 3px solid #80715D;
  border-radius: 8px;
  background: black;
}

QTabWidget::tab-bar {
   left: 0px;
}

QTabBar::tab {
  background: balck;
  border-style: solid;
  border: 2px solid #80715D;
  border-radius: 8px;
  font: Arial;
  font-weight: bold;
  font-size: 13px;
  color: gray;
  min-width: 35ex;
  padding: 2px;
}

QTabBar::tab:enabled {
   color: white;
}

QTabBar::tab:hover {
  background: #F18F00;
  color: black;
  border-style: solid;
  border: 3px solid #80715D;
  border-radius: 8px;
  border-bottom-color: #80715D;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  min-width: 33ex;
  padding: 3px;
}

QTabBar::tab:selected {
  background: #F08500;
  color: white;
  border-style: solid;
  border: 3px solid #80715D;
  border-radius: 8px;
  border-bottom-color: #80715D;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  min-width: 35ex;
  padding: 3px;
}

QTabBar::tab:!selected {
   margin-top: 2px; /* make non-selected tabs look smaller */
}

