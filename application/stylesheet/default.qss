QMenuBar {
  background: black;
  font: Arial;
  font-weight: bold;
  font-size: 15px;
  color:gray;
  padding: 1px;
  border-style: solid;
  border: 3px solid #80715D;
  border-radius: 8px;
}

QToolBar {
  background: black;  
  color:gray;
  padding: 1px;
  border-style: solid;
  border: 3px solid #80715D;
  border-radius: 8px;
}

QMenuBar::item {
  padding: 2px 25px 2px 20px;
  border: 1px solid transparent; /* reserve space for selection border */
  border-radius: 8px;
}

QMenuBar::item:enabled {
  padding: 2px 25px 2px 20px;
  border: 1px solid transparent; /* reserve space for selection border */
  border-radius: 8px;
  color: white;
}

QMenuBar::item:selected {
  background: #F08500;
  border-style: solid;
  border: 2px solid transparent;
  border-radius: 8px;
}

QMenuBar::item:selected:!enabled {
  background: #F08500;
  border-style: solid;
  border: 2px solid transparent;
  border-radius: 8px;
  color: black;
}

QMenu {
  margin: 2px; /* some spacing around the menu */
  padding: 1px;
  border-style: solid;
  border: 2px solid #80715D;
  border-radius: 8px;
  background: black;
  font: Arial;
  font-weight: bold;
  font-size: 15px;
  color: gray;
}

QMenu::item {
  padding: 2px 25px 2px 20px;
  border: 1px solid transparent; /* reserve space for selection border */
  border-radius: 8px;
}

QMenu::item:enabled {
  padding: 2px 25px 2px 20px;
  border: 1px solid transparent; /* reserve space for selection border */
  border-radius: 8px;
  color: white;
}

QMenu::item:selected {
  background: #F08500;
  border-style: solid;
  border: 2px solid transparent;
  border-radius: 8px;
}

QMenu::item:selected:!enabled {
  background: #F08500;
  border-style: solid;
  border: 2px solid transparent;
  border-radius: 8px;
  color: black;
}

QMenu::separator {
  height: 2px;
  background: #00A6AA;
  margin-left: 5px;
  margin-right: 5px;
}

QMenu::icon:checked { /* appearance of a 'checked' icon */
 /* background: white;
  border: 1px inset white;
  position: absolute;*/
  top: 1px;
  right: 1px;
  bottom: 1px;
  left: 1px;
}

QMenu::indicator {
   width: 16px;
   height: 16px;
 }

 /* non-exclusive indicator = check box style indicator
 (see QActionGroup::setExclusive) */
 QMenu::indicator:non-exclusive:unchecked {
     image: url(:/images/checkbox_unchecked.png);
 }

 QMenu::indicator:non-exclusive:checked {
     image: url(:/images/checkbox_checked.png);
 }

